<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<params>
  <library>JoystickController_plugin</library>

  <device>/dev/input/js0</device>
  <print_raw_joystick_values>false</print_raw_joystick_values>

  <!-- [ variable_name js_axis input_min input_max output_min output_max multiplier ] -->
  <!-- PS3 style controller aircraft mapping -->
  <!--
  <axis_map>
    [ throttle 1 -32767 +32767 -1 +1 -1 ]
    [ elevator 3 -32767 +32767 -1 +1 -1 ]
    [ aileron  2 -32767 +32767 -1 +1 +1 ]
    [ rudder   4 -32767 +32767 -1 +1 -1 ]
    </axis_map>
    -->

  <!-- Flight joystick aircraft mapping -->
  <axis_map>
    [ throttle 2 -32767 +32767 -1 +1 -1 ]
    [ elevator 1 -32767 +32767 -1 +1 -1 ]
    [ aileron  0 -32767 +32767 -1 +1 +1 ]
    [ rudder   3 -32767 +32767 -1 +1 -1 ]
  </axis_map>

  <publish_button_state>false</publish_button_state>
  <button_topic>joystick_buttons</button_topic>
  <button_network_name>LocalNetwork</button_network_name>

  <!-- Mapping for controlling Unicycle model -->
