<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<params>
  <library>ArduPilot_plugin</library>

  <!-- Transmit Socket: State information from SCRIMMAGE to ArduPilot -->
  <to_ardupilot_ip>127.0.0.1</to_ardupilot_ip>
  <to_ardupilot_port>5003</to_ardupilot_port>

  <!-- Receive Socket: PWM commands from ArduPilot -->
  <from_ardupilot_port>5002</from_ardupilot_port>

  <!-- servo mapping for plane -->
  <servo_map>
    [ throttle 2 1000 +2000     0 +1 +1 ]
    [ elevator 1 1000 +2000    -1 +1 -1 ]
    [ aileron  0 1000 +2000    -1 +1 +1 ]
    [ rudder   3 1000 +2000    -1 +1 +1 ]
  </servo_map>

