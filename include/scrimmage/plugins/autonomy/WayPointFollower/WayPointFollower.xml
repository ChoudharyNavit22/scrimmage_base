<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="http://gtri.gatech.edu"?>
<params>
  <library>WayPointFollower_plugin</library>

  <initial_speed>15</initial_speed>
  <max_alt_change>30</max_alt_change>

  <waypoint_tolerance>10.0</waypoint_tolerance>
  <waypoint_type>gps</waypoint_type> <!-- gps, cartesian -->
  <mode>racetrack</mode> <!-- follow_once, back_and_forth, loiter, racetrack -->

  <show_waypoints>true</show_waypoints>

  <!-- TODO: override waypoint list from main mission file -->
  <waypoint_list>
    <point>-900.0, 0.0, 200.0</point>
    <point>-700.0, 0.0, 200.0</point>
    <point>-500.0, 0.0, 200.0</point>
    <point>-300.0, 50.0, 200.0</point>
    <point>-100.0, 100.0, 200.0</point>
  </waypoint_list>

  <waypoint_color>0, 0, 255</waypoint_color>
  <waypoint_radius>1</waypoint_radius>
  <exit_on_reaching_wpt>false</exit_on_reaching_wpt>

