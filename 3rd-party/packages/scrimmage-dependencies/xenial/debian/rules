#!/usr/bin/make -f

BUILDDIR = build_dir

# secondly called by launchpad
build:
	mkdir $(BUILDDIR);
	cd $(BUILDDIR); cmake -DCMAKE_INSTALL_PREFIX=/opt/scrimmage/${DEB_HOST_MULTIARCH} -DDEB_HOST_MULTIARCH=${DEB_HOST_MULTIARCH} ..
	make -C $(BUILDDIR)

# thirdly called by launchpad
binary: binary-indep binary-arch

binary-indep:
	# nothing to be done

binary-arch:
	make -C $(BUILDDIR) DESTDIR=../debian/tmp install
	mkdir ./debian/tmp/DEBIAN
	dpkg-gencontrol -pscrimmage-dependencies
	dpkg --build ./debian/tmp ..

# firstly called by launchpad
clean:
	rm -f build
	rm -rf $(BUILDDIR)

.PHONY: binary binary-arch binary-indep clean
